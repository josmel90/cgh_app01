<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josmell.goodhope03.PostActivity"
    android:orientation="vertical"
    android:background="@color/colorMenuSupePost"
    >
     <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:columnCount="3"
        android:rowCount="1">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/post_arrow_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="115dp"
            android:textColor="@color/colorWhite"
            android:text="Post"
            />
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/post_profile_picture"
            android:layout_gravity="right"/>
    </GridLayout>
        <EditText
                android:id="@+id/et_post"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:hint="Escribe algo aquÃ­..."
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorButtomLoginText"
                android:textColorHint="@color/colorButtomLoginText"
                android:background="@drawable/color_edit_text_post"
                android:gravity="top"
                android:layout_marginTop="20dp"
            />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

     >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorMenuInfePost"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_photo_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_question_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_audio_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_video_icon"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="PUBLICAR"
                android:textColor="@color/colorWhite"
                android:background="@color/colorButtomLogin"/>
        </LinearLayout>
</RelativeLayout>

</LinearLayout>
